<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".pe.ui.widget.FormFieldView">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tf_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <!--Used to handle clicks when widget edittext is disabled-->
    <View
        android:id="@+id/click_field"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tf_container"
        app:layout_constraintEnd_toEndOf="@id/tf_container"
        app:layout_constraintStart_toStartOf="@id/tf_container"
        app:layout_constraintTop_toTopOf="@id/tf_container" />

</androidx.constraintlayout.widget.ConstraintLayout>