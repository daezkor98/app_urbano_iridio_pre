<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:padding="35dp">

            <ImageView
                android:id="@+id/imgForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_person_question"
                android:scaleType="centerInside"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="10dp"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:background="@color/gris_1"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="25dp"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/lblTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿Has olvidado tu contraseña?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textStyle="bold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_vertical_margin" />

            <TextView
                android:id="@+id/lblDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresa tu nombre de usuario para restablecer tu contraseña"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/lightPrimaryText"
                android:gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_vertical_margin" />

            <EditText
                android:id="@+id/txtUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_forgot_password"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:inputType="text|textCapCharacters"
                android:maxLength="50"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:hint="NOMBRE DE USUARIO"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_vertical_margin" />

            <LinearLayout
                android:id="@+id/boxInputPasswords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <EditText
                    android:id="@+id/txtNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input_forgot_password"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:inputType="textPassword"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="15dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:hint="NUEVA CONTRASEÑA"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_vertical_margin" />

                <EditText
                    android:id="@+id/txtRepeatPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input_forgot_password"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:inputType="textPassword"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="15dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:hint="CONFIRMAR CONTRASEÑA"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_vertical_margin" />
            </LinearLayout>

            <Button
                android:id="@+id/btnContinuar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_continuar"
                android:background="@drawable/ripple_button_forgot_password"
                android:textColor="@color/lightPrimaryText"/>

            <Button
                android:id="@+id/btnRestablecer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_restablecer"
                android:background="@drawable/ripple_button_forgot_password"
                android:textColor="@color/lightPrimaryText"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <include android:id="@+id/progress_layout" layout="@layout/progressbar_layout" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
