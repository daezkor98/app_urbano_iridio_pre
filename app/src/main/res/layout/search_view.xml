<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="56dp"
    android:visibility="invisible"
    android:animateLayoutChanges="true"
    android:theme="@style/selectableItemGrisStyle">

    <View
        android:id="@+id/transparent_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/search_layover_bg"
        android:visibility="visible"
        android:clickable="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/search_content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/search_top_bar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_search_view"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp">

                <EditText
                    android:id="@+id/searchTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="Buscar"
                    android:imeOptions="actionSearch"
                    android:inputType="textNoSuggestions|textCapCharacters"
                    android:paddingLeft="@dimen/search_view_text_padding"
                    android:paddingRight="@dimen/search_view_text_padding"
                    android:maxLines="1"
                    android:textColor="#212121"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="16sp"
                    android:theme="@style/color_theme_colorPrimary"/>

                <ImageButton
                    android:id="@+id/action_up_btn"
                    style="@style/MSV_ImageButton"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_action_arrow_left_grey"/>

                <ImageButton
                    android:id="@+id/action_voice_btn"
                    style="@style/MSV_ImageButton"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_microphone_grey"/>

                <ImageButton
                    android:id="@+id/action_scan_btn"
                    style="@style/MSV_ImageButton"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_action_barcode_scan_grey" />

                <ImageButton
                    android:id="@+id/action_empty_btn"
                    style="@style/MSV_ImageButton"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_action_close_grey"
                    android:visibility="gone"/>
            </RelativeLayout>

            <View
                android:id="@+id/suggestion_line_top"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gris_9"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:visibility="invisible"/>

            <ListView
                android:id="@+id/suggestion_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_suggestion_view"
                android:divider="@android:color/transparent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>