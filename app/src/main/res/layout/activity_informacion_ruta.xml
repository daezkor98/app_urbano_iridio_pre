                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:lines="1"
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                android:textColor="@color/lightPrimaryText"
                                android:text="Pendiente"/>
                        </LinearLayout>

                        <LinearLayout
