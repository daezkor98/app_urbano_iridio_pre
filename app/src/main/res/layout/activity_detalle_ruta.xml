<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/colorPrimary">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:fitsSystemWindows="true"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/boxAlertaReqDevolucionShipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            android:minHeight="50dp"
            android:paddingHorizontal="@dimen/activity_horizontal_margin"
            android:paddingVertical="10dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_package_not_avalible_white"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_gravity="center"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Devolución al Shipper"
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/lblMensajeReqDevolucionShipper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Esta guía por motivo de RETENCION, debe ser devuelta al shipper."
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/boxAlertaEstadoShipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            android:minHeight="50dp"
            android:paddingHorizontal="@dimen/activity_horizontal_margin"
            android:paddingVertical="10dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imgEstadoShipper"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_gravity="center"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/act_ruta_title_estado_shipper"
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/lblMensajeEstadoShipper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/activity_vertical_margin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/lblBarra"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:textColor="@color/gris_2"
                            android:textIsSelectable="true"
                            android:theme="@style/color_theme_colorPrimary" />

                        <ImageView
                            android:id="@+id/img_horario"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/ic_clock_grey"
                            app:tint="@color/gris_2" />

                        <TextView
                            android:id="@+id/lblHorario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/gris_2" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/lblDireccion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/darkPrimaryText" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/darkDividers" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/activity_vertical_margin">

                    <LinearLayout
                        android:id="@+id/action_indicaciones_container_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:theme="@style/selectableItemGrisStyle">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/bg_circle_linear_blue"
                            android:padding="10dp"
                            android:src="@drawable/ic_directions_white"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            app:tint="@color/blue_4"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textSize="13sp"
                            android:textColor="@color/blue_4"
                            android:text="INDICACIONES"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/action_llamar_container_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:theme="@style/selectableItemGrisStyle">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/bg_circle_linear_blue"
                            android:padding="10dp"
                            android:src="@drawable/ic_phone_grey"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            app:tint="@color/blue_4"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Button"
                            android:textColor="@color/blue_4"
                            android:textSize="13sp"
                            android:text="LLAMAR"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/action_piezas_container_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:theme="@style/selectableItemGrisStyle"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/bg_circle_linear_blue"
                            android:padding="10dp"
                            android:src="@drawable/ic_package_grey"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            app:tint="@color/blue_4"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Button"
                            android:textColor="@color/blue_4"
                            android:textSize="13sp"
                            android:text="PIEZAS"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/action_requerimiento_container_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:theme="@style/selectableItemGrisStyle"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/bg_circle_linear_blue"
                            android:padding="10dp"
                            android:src="@drawable/ic_calendar_white"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            app:tint="@color/blue_4"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Button"
                            android:textColor="@color/blue_4"
                            android:textSize="13sp"
                            android:text="REQUERIMIENTO"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/action_devolver_container_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:theme="@style/selectableItemGrisStyle"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/bg_circle_linear_blue"
                            android:padding="10dp"
                            android:src="@drawable/ic_package_devolucion"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            app:tint="@color/blue_4"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Button"
                            android:textColor="@color/blue_4"
                            android:textSize="13sp"
                            android:text="DEVOLVER"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/darkDividers" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvDetalles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:fadeScrollbars="false"
                    android:overScrollMode="never" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/cobrar_cliente_container_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:minHeight="50dp"
            android:background="@color/green_4"
            android:visibility="gone">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Importe por cobrar"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/lblMedioPago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <TextView
                android:id="@+id/lblImporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/yellow"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/darkDividers" />

        <Button
            android:id="@+id/btnGestionar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_marginVertical="5dp"
            android:text="@string/text_gestionar"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>