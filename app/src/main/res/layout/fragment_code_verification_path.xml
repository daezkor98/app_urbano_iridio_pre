<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.DriverVerificationCodeFragment">

    <TextView
        android:id="@+id/textViewTitleVerification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="48dp"
        android:text="Verificacíon de Ruta"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewDesVerification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDesVerification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        android:text="Ingrese el código de verificacíon que se encuentra debajo del QR de la ruta compartida"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitleVerification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewVerification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDesVerification">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editTextCode1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:hint="M"
                android:inputType="text"
                android:maxLength="1"
                android:textAlignment="center"
                app:layout_constraintEnd_toStartOf="@+id/editTextCode2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <EditText
                android:id="@+id/editTextCode2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:hint="0"
                android:inputType="text"
                android:maxLength="1"
                android:textAlignment="center"
                app:layout_constraintEnd_toStartOf="@+id/editTextCode3"
                app:layout_constraintStart_toEndOf="@+id/editTextCode1"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editTextCode3"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:hint="3"
                android:inputType="text"
                android:maxLength="1"
                android:textAlignment="center"
                app:layout_constraintEnd_toStartOf="@+id/editTextCode4"
                app:layout_constraintStart_toEndOf="@+id/editTextCode2"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editTextCode4"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:hint="1"
                android:inputType="text"
                android:maxLength="1"
                android:textAlignment="center"
                app:layout_constraintEnd_toStartOf="@+id/editTextCode5"
                app:layout_constraintStart_toEndOf="@+id/editTextCode3"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editTextCode5"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:hint="9"
                android:inputType="text"
                android:maxLength="1"
                android:textAlignment="center"
                app:layout_constraintEnd_toStartOf="@+id/editTextCode6"
                app:layout_constraintStart_toEndOf="@+id/editTextCode4"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editTextCode6"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:hint="0"
                android:inputType="text"
                android:maxLength="1"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toEndOf="@+id/editTextCode5"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/button"
        style="@style/Widget.App.Button.LoginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        android:text="validar código"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewVerification" />

</androidx.constraintlayout.widget.ConstraintLayout>
