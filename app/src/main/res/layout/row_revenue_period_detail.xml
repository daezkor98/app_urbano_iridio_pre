<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:elevation="10dp"
    android:foreground="@drawable/ripple_simple_transparent"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="0dp"
        android:layout_marginVertical="5dp"
        android:padding="10dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_20"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_60"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6" />

        <View
            android:id="@+id/divider_header_h"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/darkDividers"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guide_60"
            app:layout_constraintStart_toStartOf="@id/guide_60"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feb 18"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guide_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_entregados_guias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:textColor="@color/red_1"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_entregados_monto"
            app:layout_constraintStart_toStartOf="@id/guide_20"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_entregados_monto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S/ 380"
            android:textColor="@color/red_1"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guide_60"
            app:layout_constraintStart_toEndOf="@+id/tv_entregados_guias"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_visitados_guias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textColor="@color/red_1"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_visitados_monto"
            app:layout_constraintStart_toEndOf="@id/guide_60"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_visitados_monto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S/ 50"
            android:textColor="@color/red_1"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_visitados_guias"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>