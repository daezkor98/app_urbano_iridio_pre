<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/gris_3">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:foregroundGravity="top"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_bienvenida_v2"
        app:layout_constraintBottom_toTopOf="@+id/content_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.6"
        android:padding="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Cuenta de inicio de Sesión"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/gris_2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblMsg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicia sesión con tu cuenta de Gmail para acceder a todas las funciones de la app."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/gris_2" />


            <com.google.android.gms.common.SignInButton
                android:id="@+id/google_sign_in_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="32dp" />


    </LinearLayout>

    <include
        android:id="@+id/progress_layout"
        layout="@layout/progressbar_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>