<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightPrimaryText"
    android:orientation="vertical"
    android:theme="@style/color_theme_colorPrimary">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:id="@+id/imgHeaderDialog"
        android:visibility="gone">
    </ImageView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/lightPrimaryText"
        android:layout_gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Gestionar Guía"
            android:id="@+id/textView2"
            android:textColor="@color/gris_2" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="¿Guía Electrónica disponible?"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/darkSecondaryText" />
            </LinearLayout>
        </LinearLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rBtnSinGuia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sin Guía"
                android:checked="true"
                android:layout_marginRight="5dp" />

            <RadioButton
                android:id="@+id/rBtnGuiaElectronica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guía Electrónica"
                android:layout_marginRight="5dp"/>

            <RadioButton
                android:id="@+id/rBtnGuiaManual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guía Manual"
                android:layout_marginRight="5dp"/>
        </RadioGroup>
    </LinearLayout>
</LinearLayout>