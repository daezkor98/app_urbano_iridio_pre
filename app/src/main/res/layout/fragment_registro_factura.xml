<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pe.ui.fragment.RegistroFacturaFragment">

    <include
        android:id="@+id/progress_layout"
        layout="@layout/progressbar_layout" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:gravity="center"
                android:paddingHorizontal="@dimen/activity_horizontal_margin"
                android:text="Registro de factura"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/gris_2"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkDividers" />

            <!--Form-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tf_numero_factura"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:hint="NÃºmero de Factura">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_numero_fact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:maxLength="20" />
                </com.google.android.material.textfield.TextInputLayout>

<!--                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tf_fecha_factura"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Fecha de Factura">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_fecha_factura"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>-->
                <com.urbanoexpress.iridio3.pre.ui.widget.FormFieldView
                    android:id="@+id/field_fecha_factura"
                    android:layout_width="match_parent"
                    app:headerHint="Fecha de Factura"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tf_monto_fac"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:hint="Monto de factura (S/)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_monto_fact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end">

                    <TextView
                        android:id="@+id/tv_file_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="15dp"
                        android:foreground="@drawable/ripple_simple_transparent"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="4dp"
                        android:text=""
                        android:textColor="@color/blue_1"
                        android:textSize="17dp"
                        app:layout_constraintEnd_toStartOf="@id/btn_add_file"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/btn_add_file"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:background="@drawable/ripple_simple_transparent"
                        android:contentDescription="Agregar Archivo"
                        android:elevation="7dp"
                        android:padding="5dp"
                        android:src="@drawable/addfile"
                        app:layout_constraintEnd_toEndOf="@id/tv_sub_file"
                        app:layout_constraintStart_toStartOf="@id/tv_sub_file"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/red_1" />

                    <TextView
                        android:id="@+id/tv_sub_file"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="5dp"
                        android:text="(Adjuntar archivo)"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/btn_add_file" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_registrar"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_marginVertical="10dp"
                android:background="@drawable/ripple_button_default"
                android:text="Registrar"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="@android:color/white" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>