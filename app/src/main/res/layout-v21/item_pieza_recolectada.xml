<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:theme="@style/selectableItemGrisStyle">

    <LinearLayout
        android:id="@+id/body_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/more_actions_button"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/barra_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/gris_2"
            android:singleLine="true"
            android:ellipsize="end"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/darkSecondaryText"
            android:singleLine="true"
            android:ellipsize="end"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/more_actions_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:background="?android:selectableItemBackgroundBorderless"
        android:src="@drawable/ic_dots_vertical"
        android:scaleType="centerCrop"
        app:tint="@color/colorGreyUrbano"
        app:layout_constraintStart_toEndOf="@id/body_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>